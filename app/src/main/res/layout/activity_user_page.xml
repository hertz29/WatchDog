<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">
            <TextView
                android:layout_width="36dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:id="@+id/ratingAvgView"
                android:background="@drawable/circle"
                />
        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:textStyle="bold"
            android:textSize="40sp"
            android:id="@+id/UserPageUsername"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_weight="0.16">


        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/UserPageDogName"
            android:layout_weight="0.24" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/UserPageEmail"
            android:layout_weight="0.24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_weight="0.64">


            <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/userPageReviewList"
                    android:layout_gravity="center_vertical" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <Button
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:text=""
                android:background="@drawable/watchdog_button_medium"
                android:id="@+id/UserPageEditReview"
                android:onClick="buttomMethod"
                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                />

            <Button
                android:layout_width="136dp"
                android:layout_height="40dp"
                android:background="@drawable/watchdog_button_medium"
                android:text="Send Message"
                android:id="@+id/UserPageSendMsg"
                android:onClick="sendMsg"
                />

    </LinearLayout>

</LinearLayout>